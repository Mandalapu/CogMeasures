<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="vocabOption" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="next" parent="AppTheme">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:radius">0dp</item>
        <item name="android:text">@string/next</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="undo" parent="AppTheme">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:text">@string/clear</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="numQues" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="numAns" parent="numQues">
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:editable">false</item>
        <item name="android:ems">10</item>
    </style>

    <style name="numpadButton" parent="AppTheme">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginLeft">34dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="figure" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginEnd">50dp</item>
    </style>

    <style name="visfigure" parent="AppTheme">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="thurimg" parent="AppTheme">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">3dp</item>
    </style>
</resources>
