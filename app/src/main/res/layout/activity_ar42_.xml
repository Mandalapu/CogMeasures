<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.usc.projecttalent.cognitive.reasoning.AR42_Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <RelativeLayout
     android:id="@+id/main_layout"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:paddingBottom="@dimen/activity_vertical_margin"
     android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin">

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginRight="40dp"
      android:layout_alignBaseline="@+id/imageView3"
      android:layout_alignBottom="@+id/imageView3"
      android:contentDescription="@string/opt1" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginRight="40dp"
      android:layout_toRightOf="@+id/imageView1"
      android:layout_alignBaseline="@+id/imageView3"
      android:layout_alignBottom="@+id/imageView3"
      android:contentDescription="@string/opt2" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_toRightOf="@+id/imageView2"
      android:layout_marginBottom="64dp"
      android:layout_marginRight="40dp"
      android:layout_above="@+id/button3"
      android:layout_centerHorizontal="true"
      android:contentDescription="@string/opt3"/>
  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginRight="40dp"
      android:layout_toRightOf="@+id/imageView3"
      android:layout_alignBaseline="@+id/imageView3"
      android:layout_alignBottom="@+id/imageView3"
      android:contentDescription="@string/opt4" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_toRightOf="@+id/imageView4"
      android:layout_alignBaseline="@+id/imageView3"
      android:layout_alignBottom="@+id/imageView3"
      android:contentDescription="@string/opt5" />

  <ImageView
      android:id="@+id/question_image"
      android:layout_width="300dp"
      android:layout_height="300dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:contentDescription="@string/main"/>
 <TextView
     android:id="@+id/message"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/imageView2"
     android:layout_centerHorizontal="true"
     android:text="@string/msg1"
     android:textColor="#FF0000"
     android:textSize="25sp"
     android:textStyle="bold"
     android:visibility="invisible" />

 <Button
     android:id="@+id/button3"
     android:layout_width="100dp"
     android:layout_height="65dp"
     android:layout_alignParentBottom="true"
     android:layout_alignRight="@+id/imageView5"
     android:layout_marginBottom="35dp"
     android:layout_marginRight="37dp"
     android:background="#1E669B"
     android:radius="10dp"
     android:text="@string/button_str"
     android:textColor="#FFFFFF"
     android:textSize="26sp" />

</RelativeLayout>
<RelativeLayout
android:id="@+id/quit_resume_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:visibility="invisible">

<TextView
    android:id="@+id/quit_resume_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:textSize="25sp"
    android:text="@string/quit_resume"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_below="@+id/quit_resume_message"
    android:layout_marginTop="20dp">
 <Button
     android:id="@+id/quit"
     android:layout_width="150dp"
     android:layout_height="65dp"
     android:background="#1E669B"
     android:radius="10dp"
     android:text="Quit"
     android:textColor="#FFFFFF"
     android:textSize="26sp" />
 <Button
     android:id="@+id/resume"
     android:layout_width="150dp"
     android:layout_height="65dp"
     android:layout_toRightOf="@+id/quit"
     android:layout_marginLeft="20dp"
     android:background="#1E669B"
     android:radius="10dp"
     android:text="Resume"
     android:textColor="#FFFFFF"
     android:textSize="26sp" />

</RelativeLayout>

</RelativeLayout>

    </FrameLayout>
