<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.usc.projecttalent.cognitive.numbers.Instruction">

    <data>

        <variable
            name="item"
            type="edu.usc.projecttalent.cognitive.numbers.Example" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="@{item.question}"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                style="@style/numQues"
                android:text="@{Integer.toString(item.options[0])}" />

            <TextView
                style="@style/numQues"
                android:text="@{Integer.toString(item.options[1])}" />

            <TextView
                style="@style/numQues"
                android:text="@{Integer.toString(item.options[2])}"
                android:visibility="@{item.ansPosition == 2? View.GONE: View.VISIBLE}" />

            <TextView
                style="@style/numQues"
                android:text="@{Integer.toString(item.options[3])}"
                android:visibility="@{item.ansPosition == 3? View.GONE: View.VISIBLE}" />

            <EditText
                android:id="@+id/answer"
                style="@style/numAns" />

            <Button
                android:id="@+id/undo"
                style="@style/undo" />

        </LinearLayout>

        <include layout="@layout/num_pad" />

        <Button
            android:id="@+id/next"
            style="@style/next" />
    </LinearLayout>
</layout>