<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".spatial.Question">

    <data>

        <variable
            name="item"
            type="edu.usc.projecttalent.cognitive.thurstone.Item" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="@string/instr_thurs_q"
            android:textColor="#000"
            android:textSize="40sp" />

        <TableRow
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:layout_margin="20dp"
            android:gravity="center">

            <ImageView
                style="@style/thurimg"
                app:imageUrl="@{item.options.getResourceId(0,0)}" />

            <ImageView
                style="@style/thurimg"
                app:imageUrl="@{item.options.getResourceId(1,0)}" />

            <ImageView
                style="@style/thurimg"
                app:imageUrl="@{item.options.getResourceId(2,0)}" />

            <ImageView
                style="@style/thurimg"
                app:imageUrl="@{item.options.getResourceId(3,0)}" />
        </TableRow>

        <Button
            android:id="@id/next"
            style="@style/next" />
    </LinearLayout>
</layout>